#!/bin/bash

# Post-merge hook
# Version bumping is handled by sync-master.mjs script
# This hook is kept for potential future use

# Skip if SKIP_VERSION_BUMP is set (used by sync-master.mjs)
if [ "$SKIP_VERSION_BUMP" = "1" ]; then
    exit 0
fi

# Currently no automatic actions on merge
# Use `pnpm sync` or `pnpm sync:minor` for proper version management
exit 0
